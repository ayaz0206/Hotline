<%= form_for @question, :html => { :multipart => true } do |f| %>

	<% if flash[:errors] %>
		<% flash[:errors].each do |errors| %>
			<li> <%= errors %> </li>
		<% end %> 
	<% end %>
	
	<%= f.text_field :title %> <br>
	<%= f.text_area :description %> <br>

  <%= f.file_field :file_avatar %>

	<div id="placeholder-div3"></div> <br>

	<%= f.submit "Ask" %>

<% end %>